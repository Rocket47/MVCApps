@model IEnumerable<MVCApps.Models.Group>

@{
  //  ViewData["Title"] = "Course list";
  Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>University</title>
</head>
<body>
    <h3>Groups</h3>
    <table>
      <tr>
            <td>GROUP ID</td>
            <td>COURSE_ID</td>
            <td>NAME</td>
            <td></td>
        </tr>
          @foreach (var group in Model)
            {
                @if (group.course_ID == ViewBag.group_ID)
                {
            <tr>                
                <td><a href="~/Home/showStudents/@group.group_ID">@group.group_ID</a></td>                
                <td>@group.course_ID</td>
                <td>@group.name</td>                                               
            </tr>            
            }
        }              
        </table>
</body>
<body>
    <div>       
        <h3>Изменить название группы</h3>
        <p>Введите старое и новое название группы:</p>
        <form method="post">
            <input type="hidden" />
            <table>
                <tr>
                    <td>Название группы:</td>
                    <td><input type="text" name="name" /> </td>
                </tr>
                <tr>
                    <td>Новое название:</td>
                    <td><input type="text" name="name" /></td>
                </tr>                
               </table>
               <td><a href="~/Home/changeNameForGroup/">Нажми меня</a></td>           
        </form>
    </div>
</body>
</html>
