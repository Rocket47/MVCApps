@model IEnumerable<MVCApps.Models.Course>

@{
  //  ViewData["Title"] = "Course list";
  Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>University</title>
</head>
<body>
    <h3>Courses</h3>
    <table>
      <tr>
            <td>Course ID</td>
            <td>Name</td>
            <td>Description</td>
            <td></td>
        </tr>
          @foreach (var course in Model)
            {
            <tr>
                <td>@course.course_ID</td>
                <td>@course.name</td>
                <td>@course.description.</td>
                <td><a href="~/Home/ShowCourses/@course.name">Купить</a></td>
            </tr>
        }
        </table>
</body>
</html>
